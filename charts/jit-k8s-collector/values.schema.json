{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "cluster": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1,
          "description": "The name of the cluster. This field is required."
        }
      },
      "required": ["name"]
    },
    "jit": {
      "type": "object",
      "properties": {
        "clientId": {
          "type": "string",
          "minLength": 1,
          "description": "The client ID for JIT. This field is required."
        },
        "clientSecret": {
          "type": "string",
          "minLength": 1,
          "description": "The client secret for JIT. This field is required."
        }
      },
      "required": ["clientId", "clientSecret"]
    }
  }
}
